<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="700.0" spacing="15.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ims.controller.ProductsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <Label text="Product Inventory" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <HBox HBox.hgrow="ALWAYS" />

                <Button mnemonicParsing="false" onAction="#handleViewArchived" style="-fx-background-color: #7f8c8d; -fx-text-fill: white;" text="ðŸ“‚ View Archived" />

                <Button mnemonicParsing="false" onAction="#handleRestockBtn" style="-fx-background-color: #2980b9; -fx-text-fill: white;" text="ðŸ“¥ Restock" />
                <Button mnemonicParsing="false" onAction="#handleSaleBtn" style="-fx-background-color: #c0392b; -fx-text-fill: white;" text="ðŸ“¤ Sell" />

                <Button mnemonicParsing="false" onAction="#handleEditBtn" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="âœŽ Edit" />

                <Button mnemonicParsing="false" onAction="#handleDeleteBtn" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="ðŸ—‘ Archive" />

                <Button mnemonicParsing="false" onAction="#handleAddProductBtn" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="+ Add" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <TextField fx:id="searchField" promptText="Search by Name or SKU..." HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" text="Search" />
            </children>
        </HBox>

        <TableView fx:id="productsTable" prefHeight="400.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colSku" prefWidth="100.0" text="SKU" />
                <TableColumn fx:id="colName" prefWidth="200.0" text="Product Name" />
                <TableColumn fx:id="colPrice" prefWidth="100.0" text="Price ($)" />
                <TableColumn fx:id="colStock" prefWidth="80.0" text="Stock" />
                <TableColumn fx:id="colStatus" prefWidth="80.0" text="Status" />
            </columns>
        </TableView>
    </children>
</VBox>