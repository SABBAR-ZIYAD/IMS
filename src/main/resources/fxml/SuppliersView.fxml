<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="700.0" spacing="20.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ims.controller.SuppliersController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <Label text="Supplier Management" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <HBox HBox.hgrow="ALWAYS" />

                <Button mnemonicParsing="false" onAction="#handleViewArchived" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-cursor: hand;" text="ðŸ“‚ View Archived" />
            </children>
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 5;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <TextField fx:id="nameField" promptText="Supplier Name" HBox.hgrow="ALWAYS" />
                <TextField fx:id="contactField" promptText="Phone / Email" prefWidth="200.0" />
                <Button mnemonicParsing="false" onAction="#handleAdd" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand;" text="+ Add" />
            </children>
        </HBox>

        <TableView fx:id="suppliersTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colName" prefWidth="250.0" text="Supplier Name" />
                <TableColumn fx:id="colContact" prefWidth="250.0" text="Contact Info" />
                <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
            </columns>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button mnemonicParsing="false" onAction="#handleDelete" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-cursor: hand;" text="ðŸ—‘ Archive Selected" />
        </HBox>
    </children>
</VBox>