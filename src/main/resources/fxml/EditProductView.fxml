<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" prefHeight="300.0" prefWidth="350.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ims.controller.EditProductController">
    <padding> <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" /> </padding>
    <children>
        <Label text="Edit Product" textFill="#2c3e50"> <font> <Font name="System Bold" size="22.0" /> </font> </Label>

        <Label text="SKU" /> <TextField fx:id="skuField" />
        <Label text="Name" /> <TextField fx:id="nameField" />
        <Label text="Price" /> <TextField fx:id="priceField" />

        <Button maxWidth="Infinity" onAction="#handleSave" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Save Changes" />
    </children>
</VBox>