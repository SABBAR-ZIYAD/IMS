<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" prefHeight="300.0" prefWidth="350.0" spacing="15.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ims.controller.SaleController">
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>
    <children>
        <Label text="Sell Product" textFill="#c0392b">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>

        <Label fx:id="productLabel" text="Product: ..." textFill="#7f8c8d">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <Label fx:id="stockLabel" text="Current Stock: ..." textFill="#2980b9">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>

        <Label text="Quantity to Sell" />
        <TextField fx:id="qtyField" promptText="e.g. 1" />

        <Label fx:id="errorLabel" textFill="RED" />

        <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleConfirm" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-cursor: hand;" text="Confirm Sale">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>