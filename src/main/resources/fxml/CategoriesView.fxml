<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="600.0" prefWidth="700.0" spacing="20.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ims.controller.CategoriesController">
    <padding> <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /> </padding>

    <VBox spacing="10.0" HBox.hgrow="ALWAYS">
        <Label text="Categories" textFill="#2c3e50"> <font> <Font name="System Bold" size="24.0" /> </font> </Label>

        <TableView fx:id="categoryTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colName" prefWidth="250.0" text="Category Name" />
            </columns>
        </TableView>
    </VBox>

    <VBox prefWidth="250.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <padding> <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /> </padding>

        <Label text="Manage Category" textFill="#7f8c8d"> <font> <Font name="System Bold" size="16.0" /> </font> </Label>

        <TextField fx:id="nameField" promptText="Enter Category Name" />

        <Button maxWidth="Infinity" onAction="#handleSave" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand;" text="Save" />
        <Button maxWidth="Infinity" onAction="#handleClear" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-cursor: hand;" text="Clear / New" />

        <VBox VBox.vgrow="ALWAYS" /> <Button maxWidth="Infinity" onAction="#handleDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand;" text="Delete Selected" />
    </VBox>
</HBox>