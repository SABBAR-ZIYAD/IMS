<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>


<VBox alignment="TOP_CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ims.controller.HomeController" style="-fx-padding: 30;">

    <HBox alignment="CENTER_LEFT">
        <Label text="Dashboard Overview" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
    </HBox>

    <GridPane hgap="20.0" vgap="20.0">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
            <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
            <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
            <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
        </columnConstraints>

        <VBox style="-fx-background-color: #3498db; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" alignment="CENTER_LEFT" prefHeight="120.0" GridPane.columnIndex="0">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="TOTAL PRODUCTS" textFill="WHITE" style="-fx-font-weight: bold;"/>
            <Label fx:id="totalProductsLabel" text="0" textFill="WHITE">
                <font><Font name="System Bold" size="36.0" /></font>
            </Label>
        </VBox>

        <VBox style="-fx-background-color: #e74c3c; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" alignment="CENTER_LEFT" prefHeight="120.0" GridPane.columnIndex="1">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="LOW STOCK ALERTS" textFill="WHITE" style="-fx-font-weight: bold;"/>
            <Label fx:id="lowStockLabel" text="0" textFill="WHITE">
                <font><Font name="System Bold" size="36.0" /></font>
            </Label>
        </VBox>

        <VBox style="-fx-background-color: #f39c12; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" alignment="CENTER_LEFT" prefHeight="120.0" GridPane.columnIndex="2">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="ACTIVE SUPPLIERS" textFill="WHITE" style="-fx-font-weight: bold;"/>
            <Label fx:id="activeSuppliersLabel" text="0" textFill="WHITE">
                <font><Font name="System Bold" size="36.0" /></font>
            </Label>
        </VBox>

        <VBox style="-fx-background-color: #27ae60; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" alignment="CENTER_LEFT" prefHeight="120.0" GridPane.columnIndex="3">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="INVENTORY VALUE" textFill="WHITE" style="-fx-font-weight: bold;"/>
            <Label fx:id="inventoryValueLabel" text="0.00 Dh" textFill="WHITE">
                <font><Font name="System Bold" size="36.0" /></font>
            </Label>
        </VBox>
    </GridPane>

    <VBox spacing="10" VBox.vgrow="ALWAYS" style="-fx-background-color: #ecf0f1; -fx-background-radius: 10; -fx-padding: 15;">
        <Label text="Recent Transactions" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <TableView fx:id="recentTransactionsTable" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
            <columns>
                <TableColumn fx:id="colDate" text="Date / Time" prefWidth="160"/>
                <TableColumn fx:id="colProduct" text="Product" prefWidth="120"/>
                <TableColumn fx:id="colType" text="Type" prefWidth="80"/>
                <TableColumn fx:id="colQty" text="Qty" prefWidth="60"/>
                <TableColumn fx:id="colReason" text="Reason" prefWidth="100"/>
                <TableColumn fx:id="colUser" text="User" prefWidth="80"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
</VBox>
