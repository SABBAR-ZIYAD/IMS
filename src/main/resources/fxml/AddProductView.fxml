<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" prefHeight="450.0" prefWidth="400.0" spacing="15.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ims.controller.AddProductController">
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>
    <children>
        <Label text="New Product" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Label text="Product SKU (Barcode)" />
        <TextField fx:id="skuField" promptText="e.g. LAP-001" />

        <Label text="Product Name" />
        <TextField fx:id="nameField" promptText="e.g. Gaming Laptop" />

        <Label text="Cost Price ($)" />
        <TextField fx:id="costField" promptText="0.00" />

        <Label text="Sell Price ($)" />
        <TextField fx:id="priceField" promptText="0.00" />

        <Label text="Category" />
        <ComboBox fx:id="categoryBox" prefWidth="320.0" promptText="Select Category" />

        <Label text="Supplier" />
        <ComboBox fx:id="supplierBox" prefWidth="320.0" promptText="Select Supplier" />

        <Label fx:id="errorLabel" textFill="RED" />

        <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleSave" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand;" text="Save Product">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>