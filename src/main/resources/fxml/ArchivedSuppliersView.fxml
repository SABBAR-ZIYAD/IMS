<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="700.0" spacing="20.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ims.controller.ArchivedSuppliersController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: #2c3e50; -fx-cursor: hand;" text="⬅ Back">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Label text="Archived Suppliers" textFill="#7f8c8d">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </HBox>

        <TableView fx:id="archivedTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colName" prefWidth="250.0" text="Supplier Name" />
                <TableColumn fx:id="colContact" prefWidth="250.0" text="Contact Info" />
                <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
            </columns>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button mnemonicParsing="false" onAction="#handleRestore" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-cursor: hand;" text="♻ Restore Selected" />
        </HBox>
    </children>
</VBox>