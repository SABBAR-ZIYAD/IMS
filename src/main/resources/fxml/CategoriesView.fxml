<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="600.0" prefWidth="700.0" spacing="20.0" style="-fx-background-color: transparent;" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ims.controller.CategoriesController">
    <padding> <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" /> </padding>

    <VBox spacing="10.0" HBox.hgrow="ALWAYS">
        <Label styleClass="dashboard-title" text="Categories" />

        <VBox styleClass="card" VBox.vgrow="ALWAYS">
            <TableView fx:id="categoryTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                    <TableColumn fx:id="colName" prefWidth="250.0" text="Category Name" />
                </columns>
                <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </VBox>

    <VBox prefWidth="280.0" spacing="15.0" styleClass="management-panel">
        <Label styleClass="management-title" text="Manage Category" />

        <TextField fx:id="nameField" promptText="Enter Category Name" />

        <Button maxWidth="Infinity" onAction="#handleSave" styleClass="primary-button" text="Save" />
        <Button maxWidth="Infinity" onAction="#handleClear" styleClass="secondary-button" text="Clear / New" />

        <VBox VBox.vgrow="ALWAYS" />
        <Button maxWidth="Infinity" onAction="#handleDelete" styleClass="danger-button" text="Delete Selected" />
    </VBox>
</HBox>